---
const { src, body } = Astro.props;
---
<div class="container">
    <section class="mpp-widget-map">
        <iframe src={src} frameborder="0"></iframe>
        <div class="mpp-widget-map-body" set:html={body} />
      </section>
</div>


<style lang="scss" is:global>
  .mpp-widget-map {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    & :is(p, li, strong) {
        font-size: 0.875rem;
    }

    & li {
        padding: 0 0 0 1em;
        position: relative;
        list-style-type: none !important;

        &:before {
            content: "";
            position: absolute;
            top: 9px;
            left: 3px;
            width: 2px;
            height: 2px;
            border-radius: 50%;
            background: var(--blackColor);
        }
    }
    & iframe {
        grid-area: auto/span 2;
        border-radius: 15px;
        width: 100%;
        height: 350px;
        @media (width > 768px) {
            height: 650px;
        }
    }

    & h1 {
        font-size: 1.25rem;
        font-weight: 500;
        margin: 0 0 1rem;
    }

    @media (width > 768px) {
        gap: 1.5rem;
        grid-template-columns: repeat(3, 1fr);
        margin: 2rem 0 0;
    }

    @media (width > 992px) {
        gap: 2rem;
    }
    .mpp-widget-map-body {
        display: flex;
        flex-direction: column;
        gap: .5rem;
    }
  }
</style>
