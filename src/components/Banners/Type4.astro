---
const { srcMobile, srcDesktop, body } = Astro.props;
---
<div class="container">
    <section class="mpp-banner-type-4">
        <picture>
          <source media="(max-width: 767px)" type="image/webp" srcset={srcMobile} />
          <source media="(min-width: 768px)" type="image/webp" srcset={srcDesktop} />
          <img src={srcDesktop} />
        </picture>
        <div class="mpp-banner-type-4-body" set:html={body} />
      </section>
</div>


<style lang="scss" is:global>
  .mpp-banner-type-4 {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    & :is(p, li, strong) {
        font-size: 0.875rem;
    }

    & li {
        padding: 0 0 0 1em;
        position: relative;
        list-style-type: none !important;

        &:before {
            content: "";
            position: absolute;
            top: 9px;
            left: 3px;
            width: 2px;
            height: 2px;
            border-radius: 50%;
            background: var(--blackColor);
        }
    }
    & :is(img, picture) {
        grid-area: auto/span 2;
        border-radius: 15px;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
        max-height: 350px;
        @media (width > 992px) {
            max-height: 410px;
            object-position: center;
        }
    }

    & h1 {
        font-size: 1.25rem;
        font-weight: 500;
        margin: 0 0 1rem;
    }

    @media (width > 768px) {
        gap: 1.5rem;
        grid-template-columns: repeat(3, 1fr);
        margin: 2rem 0 0;
    }

    @media (width > 992px) {
        gap: 2rem;
    }
  }
</style>
