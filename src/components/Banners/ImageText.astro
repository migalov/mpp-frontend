---
const {src, body, reverse} = Astro.props
---

<div class:list={["mpp-image-and-content", {
    "mpp-image-and-content--reverse": reverse === true
}]}>
    <img src={src} alt="" />
    <div set:html={body}>
</div>


<style lang="scss" is:global>
    .mpp-image-and-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        & img {
            max-width: 100%;
            overflow: hidden;
            border-radius: 15px;
        }
        & > div {
            display: flex;
            flex-direction: column;
            gap: .5em;
            @media (width >= 768px) {

                gap: 1em;
            }
        }
        & h3 {
                font-size: 1.5rem;
                margin: 0 0 .5em;
        }
        & ul:has( li > img) {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            flex: 1;
            margin: 0;

            @media (width >= 768px) {
                justify-content: end;
            }
        }
        &--reverse {
            
            @media (width >= 768px) {
                flex-direction: row-reverse;
                grid-template-areas: "cont img";                
            }


            & > img {
                grid-area: img;
                
                @media (width >= 768px) {
                    // grid-column-start: 2;
                    // grid-column-end: 3;
                }
            }

            & > div {
                grid-area: cont;

            }


        }
        @media (width >= 768px) {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }
        @media (width >= 992px) {
            gap: 2rem;
        }

    }
</style>